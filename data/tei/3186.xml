            <ab type="factoid" subtype="event" xml:id="factoid-1" resp="#dschwartz">
                <idno type="URI">https://spear-prosop.org/3186-1</idno>
                <listEvent>
                    <event ana="http://syriaca.org/keyword/letters http://syriaca.org/keyword/diptychs http://syriaca.org/keyword/names" notBefore="0516" notAfter="0517">
                        <desc>
                            <persName ref="http://syriaca.org/person/51">Severus</persName> wrote a letter to
                            <persName ref="http://syriaca.org/person/2769">Theophanes</persName> discussing 
                            the need to be moderate regarding names included in the diptychs.
                            <listRelation>
                                <relation type="person" ref="http://syriaca.org/keyword/sender-of-letter-to" active="http://syriaca.org/person/51" passive="http://syriaca.org/person/2769" notBefore="0516" notAfter="0517"/>
                            </listRelation>
                        </desc>
                    </event>
                </listEvent>
                <bibl type="primary">
                    <ptr target="http://syriaca.org/bibl/670"/>
                    <citedRange unit="p">308-09</citedRange>
                    <citedRange unit="part">42</citedRange>
                </bibl>
            </ab>
            <ab type="factoid" subtype="occupation" xml:id="factoid-2" resp="#dschwartz">
                <idno type="URI">https://spear-prosop.org/3186-2</idno>
                <listPerson>
                    <person>
                        <persName ref="http://syriaca.org/person/2769"/>
                        <occupation ana="http://syriaca.org/keyword/scholastics">
                            <note type="desc">
                                <persName ref="http://syriaca.org/person/2769">Theophanes</persName> 
                                was a scholastic.
                            </note>
                        </occupation>
                    </person>
                </listPerson>
                <bibl type="primary">
                    <ptr target="http://syriaca.org/bibl/670"/>
                    <citedRange unit="p">308</citedRange>
                    <citedRange unit="part">42</citedRange>
                </bibl>
            </ab>
            <ab type="factoid" subtype="event" xml:id="factoid-3" resp="#dschwartz">
                <idno type="URI">https://spear-prosop.org/3186-3</idno>
                <listEvent>
                    <event ana="http://syriaca.org/keyword/letters http://syriaca.org/keyword/bishops http://syriaca.org/keyword/heresy">
                        <desc>
                            <persName ref="http://syriaca.org/person/792">Timothy II</persName>,
                            <persName ref="http://syriaca.org/person/2470">Paul of Ephesus</persName>,
                            <persName ref="http://syriaca.org/person/2474">Peter of Antioch</persName>, and
                            <persName ref="http://syriaca.org/person/2598">Anastasius of Jerusalem</persName>
                            co-authored an encyclical letter condemning heresy.
                            <listRelation>
                                <relation type="person" ref="http://syriaca.org/keyword/co-authors" mutual="http://syriaca.org/person/792 http://syriaca.org/person/2470 http://syriaca.org/person/2474 http://syriaca.org/person/2598"/>
