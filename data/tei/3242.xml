                <idno type="URI">https://spear-prosop.org/3242-1</idno>
                <listEvent>
                    <event ana="http://syriaca.org/taxonomy/letters http://syriaca.org/taxonomy/deposition-of-clergy http://syriaca.org/taxonomy/anti-chalcedonian">
                        <desc>
                            <persName ref="http://syriaca.org/person/51">Severus</persName> wrote a letter to
                            <persName ref="http://syriaca.org/person/2551">Soteric</persName> discussing the
                            investigation of and efforts to depose 
                            <persName ref="http://syriaca.org/person/2696">Macedonius II</persName>.
                            <listRelation>
                                <relation type="person" ref="http://syriaca.org/taxonomy/sender-of-letter-to" active="http://syriaca.org/person/51" passive="http://syriaca.org/person/2551"/>
                            </listRelation>
                        </desc>
                    </event>
                </listEvent>
                <bibl type="primary">
                    <ptr target="http://syriaca.org/bibl/671"/>
                    <citedRange unit="p">290-91</citedRange>
                    <citedRange unit="part">118</citedRange>
                </bibl>
            </ab>
            <ab type="factoid" subtype="event" xml:id="factoid-2" resp="#dschwartz">
                <idno type="URI">https://spear-prosop.org/3242-2</idno>
                <listEvent>
                    <event ana="http://syriaca.org/taxonomy/deposition-of-clergy http://syriaca.org/taxonomy/anti-chalcedonian http://syriaca.org/taxonomy/council-of-chalcedon">
                        <desc>
                            <persName ref="http://syriaca.org/person/2281">Patricius</persName>,
                            <persName ref="http://syriaca.org/person/51">Severus</persName>,
                            <persName ref="http://syriaca.org/person/2730">Paul</persName>, and
                            <persName ref="http://syriaca.org/person/579">Julian of Halicarnassus</persName>
                            agressively questioned
                            <persName ref="http://syriaca.org/person/2696">Macedonius II</persName> about his efforts to promote
                            the Council of Chalcedon against the wishes of
                            <persName ref="http://syriaca.org/person/2265">Anastasius I</persName>.
                            <listRelation>
                                <relation type="person" ref="http://syriaca.org/taxonomy/enmity-for" active="http://syriaca.org/person/2281 http://syriaca.org/person/51 http://syriaca.org/person/2730 http://syriaca.org/person/2730" passive="http://syriaca.org/person/2696"/>
                                <relation type="person" ref="http://syriaca.org/taxonomy/professional-relationship" mutual="http://syriaca.org/person/2281 http://syriaca.org/person/51 http://syriaca.org/person/2730 http://syriaca.org/person/2730"/>
                            </listRelation>
                        </desc>
                    </event>
                </listEvent>
                <bibl type="primary">
                    <ptr target="http://syriaca.org/bibl/671"/>
                    <citedRange unit="p">290-91</citedRange>
                    <citedRange unit="part">118</citedRange>
                </bibl>
            </ab>
