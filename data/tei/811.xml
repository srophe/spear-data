        <body>
            <ab type="factoid" subtype="nameVariant" xml:id="factoid-1" resp="#dschwartz">
                <idno type="URI">http://syriaca.org/spear/811-1</idno>
                <listPerson>
                    <person>
                        <persName ref="http://syriaca.org/person/2153">Zacharias</persName>
                    </person>
                </listPerson>
                <bibl type="primary">
                    <ptr target="http://syriaca.org/bibl/1409"/>
