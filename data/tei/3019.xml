        <body>
            <ab type="factoid" subtype="event" xml:id="factoid-1" resp="#dschwartz">
                <idno type="URI">http://syriaca.org/spear/3019-1</idno>
                <listEvent>
                    <event ana="http://syriaca.org/keyword/letters http://syriaca.org/keyword/bishops http://syriaca.org/keyword/ordination" when="0518">
                        <desc>
                            <persName ref="http://syriaca.org/person/51">Severus</persName> wrote a letter to 
                            <persName ref="http://syriaca.org/person/2567">Eleusinius</persName> 
                            on the subject of the ordination and theology of 
                            <persName ref="http://syriaca.org/person/2686">John of Cappadocia</persName>.
                            <listRelation>
                                <relation type="person" ref="http://syriaca.org/keyword/sender-of-letter-to" active="http://syriaca.org/person/51" passive="http://syriaca.org/person/2567"/>
                            </listRelation>
                        </desc>
                    </event>
                </listEvent>
                <bibl type="primary">
                    <ptr target="http://syriaca.org/bibl/669"/>
                    <citedRange unit="part">VI.1</citedRange>
                    <citedRange unit="p">359-63</citedRange>
                </bibl>
            </ab>
            <ab type="factoid" subtype="event" xml:id="factoid-2" resp="#dschwartz">
                <idno type="URI">http://syriaca.org/spear/3019-2</idno>
                <listEvent>
                    <event ana="http://syriaca.org/keyword/letters http://syriaca.org/keyword/trials http://syriaca.org/keyword/priests" when="0518">
                        <desc>
                            <persName ref="http://syriaca.org/person/2567">Eleusinius</persName> wrote a letter to 
                            <persName ref="http://syriaca.org/person/51">Severus</persName>
                            about a trial of some presbyters.
                            <listRelation>
                                <relation type="person" ref="http://syriaca.org/keyword/sender-of-letter-to" active="http://syriaca.org/person/2567" passive="http://syriaca.org/person/51"/>
                            </listRelation>
                        </desc>
                    </event>
                </listEvent>
                <bibl type="primary">
                    <ptr target="http://syriaca.org/bibl/669"/>
                    <citedRange unit="part">VI.1</citedRange>
                    <citedRange unit="p">360</citedRange>
                </bibl>
            </ab>
            <ab type="factoid" subtype="occupation" xml:id="factoid-3" resp="#dschwartz">
                <idno type="URI">http://syriaca.org/spear/3019-3</idno>
                <listPerson>
                    <person>
                        <persName ref="http://syriaca.org/person/2666"/>
                        <occupation ana="http://syriaca.org/keyword/monks">
                            <note type="desc">
                                <persName ref="http://syriaca.org/person/2666">Isidore</persName> 
                                was a monk.
                            </note>
                        </occupation>
                    </person>
                </listPerson>
                <bibl type="primary">
                    <ptr target="http://syriaca.org/bibl/669"/>
                    <citedRange unit="part">VI.1</citedRange>
                    <citedRange unit="p">360</citedRange>
                </bibl>
            </ab>
            <ab type="factoid" subtype="relation" xml:id="factoid-4" resp="#dschwartz">
                <idno type="URI">http://syriaca.org/spear/3019-4</idno>
                <listRelation>
                    <relation type="person" ref="http://syriaca.org/keyword/enmity-for" active="http://syriaca.org/person/51" passive="http://syriaca.org/person/2666">
                        <desc>
                            <persName ref="http://syriaca.org/person/51">Severus</persName> 
                            described
                            <persName ref="http://syriaca.org/person/2666">Isidore</persName>
                            as unphilosophic and deceitful.
                        </desc>
                    </relation>
                </listRelation>
                <bibl type="primary">
                    <ptr target="http://syriaca.org/bibl/669"/>
                    <citedRange unit="part">VI.1</citedRange>
                    <citedRange unit="p">360</citedRange>
                </bibl>
            </ab>
            <ab type="factoid" subtype="event" xml:id="factoid-5" resp="#dschwartz">
                <idno type="URI">http://syriaca.org/spear/3019-5</idno>
                <listEvent>
                    <event ana="http://syriaca.org/keyword/bishops http://syriaca.org/keyword/ordination" when="0518">
                        <desc>
                            <persName ref="http://syriaca.org/person/2686">John of Cappadocia</persName> became bishop of 
                            <placeName ref="http://syriaca.org/place/2290">Constantinople</placeName>.
                        </desc>
                    </event>
                </listEvent>
                <bibl type="primary">
                    <ptr target="http://syriaca.org/bibl/669"/>
                    <citedRange unit="part">VI.1</citedRange>
                    <citedRange unit="p">360</citedRange>
                </bibl>
            </ab>
            <ab type="factoid" subtype="occupation" xml:id="factoid-6" resp="#dschwartz">
                <idno type="URI">http://syriaca.org/spear/3019-6</idno>
                <listPerson>
                    <person>
                        <persName ref="http://syriaca.org/person/2686"/>
                        <occupation ana="http://syriaca.org/keyword/bishops" from="0518">
                            <note type="desc">
                                <persName ref="http://syriaca.org/person/2686">John of Cappadocia</persName> was bishop of
                                <placeName ref="http://syriaca.org/place/2290">Constantinople</placeName>.
                            </note>
                        </occupation>
                    </person>
                </listPerson>
                <bibl type="primary">
                    <ptr target="http://syriaca.org/bibl/669"/>
                    <citedRange unit="part">VI.1</citedRange>
                    <citedRange unit="p">360</citedRange>
                </bibl>
            </ab>
            <ab type="factoid" subtype="occupation" xml:id="factoid-7" resp="#dschwartz">
                <idno type="URI">http://syriaca.org/spear/3019-7</idno>
                <listPerson>
                    <person>
                        <persName ref="http://syriaca.org/person/2686"/>
                        <occupation ana="http://syriaca.org/keyword/syncelli" notAfter="0518">
                            <note type="desc">
                                <persName ref="http://syriaca.org/person/2686">John of Cappadocia</persName> 
                                was the syncellus under 
                                <persName ref="http://syriaca.org/person/2773">Timothy</persName>.
                            </note>
                        </occupation>
                    </person>
                </listPerson>
                <bibl type="primary">
                    <ptr target="http://syriaca.org/bibl/669"/>
                    <citedRange unit="part">VI.1</citedRange>
                    <citedRange unit="p">360</citedRange>
                </bibl>
            </ab>
            <ab type="factoid" subtype="nameVariant" xml:id="factoid-8" resp="#dschwartz">
                <idno type="URI">http://syriaca.org/spear/3019-8</idno>
                <listPerson>
                    <person>
                        <persName ref="http://syriaca.org/person/2773">John Florentinus</persName>
                    </person>
                </listPerson>
                <bibl type="primary">
                    <ptr target="http://syriaca.org/bibl/669"/>
                    <citedRange unit="part">VI.1</citedRange>
                    <citedRange unit="p">360</citedRange>
                </bibl>
            </ab>
            <ab type="factoid" subtype="relation" xml:id="factoid-9" resp="#dschwartz">
                <idno type="URI">http://syriaca.org/spear/3019-9</idno>
                <listRelation>
                    <relation type="person" ref="http://syriaca.org/keyword/alliance-with" mutual="http://syriaca.org/person/2551 http://syriaca.org/person/2546">
                        <desc>
                            <persName ref="http://syriaca.org/person/51">Severus</persName>, <persName ref="http://syriaca.org/person/2567">Eleusinius</persName>, 
                            <persName ref="http://syriaca.org/person/2551">Soteric</persName>, and <persName ref="http://syriaca.org/person/2546">Entrechius</persName> 
                            were united in their opposition to Chalcedon.
                        </desc>
                    </relation>
                </listRelation>
                <bibl type="primary">
                    <ptr target="http://syriaca.org/bibl/669"/>
                    <citedRange unit="part">VI.1</citedRange>
                    <citedRange unit="p">361</citedRange>
                </bibl>
            </ab>
