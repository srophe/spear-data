        <body>
            <ab type="factoid" subtype="relation" xml:id="factoid-1" resp="#dschwartz">
                <idno type="URI">http://syriaca.org/spear/800-1</idno>
                <listRelation>
                    <relation type="person" ref="http://syriaca.org/keyword/commemorates" active="http://syriaca.org/person/74" passive="http://syriaca.org/person/1116">
                        <desc>
                            <persName ref="http://syriaca.org/person/74">John of Ephesus</persName> 
                            commemorated
                            <persName ref="http://syriaca.org/person/1116">Addai</persName>.
                        </desc>
                    </relation>
                </listRelation>
                <bibl type="primary">
                    <ptr target="http://syriaca.org/work/800"/>
                    <citedRange unit="p">124-35</citedRange>
                </bibl>
                <bibl type="primary">
                    <ptr target="http://syriaca.org/bibl/1409"/>
                    <citedRange unit="p">124-35</citedRange>
                </bibl>
            </ab>
            <ab type="factoid" subtype="sanctity" xml:id="factoid-7" resp="#dschwartz">
                <idno type="URI">http://syriaca.org/spear/800-7</idno>
                <listPerson>
                    <person>
                        <persName ref="http://syriaca.org/person/1116"/>
                        <state type="sanctity" ana="http://syriaca.org/keyword/saints">
                            <note type="desc"><persName ref="http://syriaca.org/person/1116">Addai</persName>
                                was a saint.
                            </note>
                        </state>
                    </person>
                </listPerson>
                <bibl type="primary">
                    <ptr target="http://syriaca.org/work/800"/>
                    <citedRange unit="p">124</citedRange>
                </bibl>
                <bibl type="primary">
                    <ptr target="http://syriaca.org/bibl/1409"/>
                    <citedRange unit="p">124</citedRange>
                </bibl>
            </ab>
            <ab type="factoid" subtype="occupation" xml:id="factoid-2" resp="#syoung">
                <idno type="URI">http://syriaca.org/spear/800-2</idno>
                <listPerson>
                    <person>
                        <persName ref="http://syriaca.org/person/1116"/>
                        <occupation ana="http://syriaca.org/keyword/bishops">
                            <note type="desc"><persName ref="http://syriaca.org/person/1116">Addai</persName>was
                                chorepisocpus in a monastery in a village called <placeName ref="http://syriaca.org/place/2776">Fardaisa</placeName>, at the
                                approach to the Armenian frontier in<placeName
                                    ref="http://syriaca.org/place/2758">the district called
                                    Anzetene</placeName>. </note>
                        </occupation>
                    </person>
                </listPerson>
                <bibl type="primary">
                    <ptr target="http://syriaca.org/work/800"/>
                    <citedRange unit="p">125</citedRange>
                </bibl>
                <bibl type="primary">
                    <ptr target="http://syriaca.org/bibl/1409"/>
                    <citedRange unit="p">125</citedRange>
                </bibl>
            </ab>
            <ab type="factoid" subtype="event" xml:id="factoid-3" resp="#syoung">
                <idno type="URI">http://syriaca.org/spear/800-3</idno>
                <listEvent>
                    <event
                        ana="http://syriaca.org/keyword/repentance http://syriaca.org/keyword/bishops http://syriaca.org/keyword/sanctity http://syriaca.org/keyword/laity">
                        <desc><persName ref="http://syriaca.org/person/1116"
                            >Addai</persName>exercised his pastoral office by exhorting all to love
                            the poor and repent from sin. </desc>
                    </event>
                </listEvent>
                <bibl type="primary">
                    <ptr target="http://syriaca.org/work/800"/>
                    <citedRange unit="p">126</citedRange>
                </bibl>
                <bibl type="primary">
                    <ptr target="http://syriaca.org/bibl/1409"/>
                    <citedRange unit="p">126</citedRange>
                </bibl>
            </ab>
            <ab type="factoid" subtype="event" xml:id="factoid-4" resp="#syoung">
                <idno type="URI">http://syriaca.org/spear/800-4</idno>
                <listEvent>
                    <event
                        ana="http://syriaca.org/keyword/monks http://syriaca.org/keyword/exile http://syriaca.org/keyword/council-of-chacledon-451 http://syriaca.org/keyword/apostasy http://syriaca.org/keyword/bishops" notBefore="0451">
                        <desc><date notBefore="0451" calendar="Gregorian">Sometime after
                                451</date><persName ref="http://syriaca.org/person/1116"
                                >Addai</persName>was deposed by those attempting to enforce the
                            heresy of the Council of <placeName ref="http://syriaca.org/place/622"
                                >Chalcedon</placeName>. He exhorted the
                            brothers to remember the poor, and retreated to his exile in the
                            mountains east of <placeName ref="http://syriaca.org/place/2758"
                                >Anzetene</placeName>. </desc>
                    </event>
                </listEvent>
                <bibl type="primary">
                    <ptr target="http://syriaca.org/work/800"/>
                    <citedRange unit="p">128</citedRange>
                </bibl>
                <bibl type="primary">
                    <ptr target="http://syriaca.org/bibl/1409"/>
                    <citedRange unit="p">128</citedRange>
                </bibl>
            </ab>
            <ab type="factoid" subtype="event" xml:id="factoid-5" resp="#syoung">
                <idno type="URI">http://syriaca.org/spear/800-5</idno>
                <listEvent>
                    <event
                        ana="http://syriaca.org/keyword/monasteries http://syriaca.org/keyword/monks http://syriaca.org/keyword/poverty http://syriaca.org/keyword/wine http://syriaca.org/keyword/economics" notBefore="0456">
                        <desc><date notBefore="0456" calendar="Gregorian">Five years after the Council of Chalcedon</date>,
                            when the monastery at <placeName ref="http://syriaca.org/place/2776"
                                >Fardaisa</placeName>was brought to indigence, the brothers
                            approached <persName ref="http://syriaca.org/person/1116"
                                >Addai</persName>in his exile. To recover financially, they began
                            planting vineyards throughout the mountains east of <placeName
                                ref="http://syriaca.org/place/2758">Anzetene</placeName>. Merchants
                            from <placeName ref="http://syriaca.org/place/2763">Cappadocia</placeName>, who would go as far <placeName
                                ref="http://syriaca.org/place/486">Syria</placeName>to buy wine.
                            Selling wine allowed <persName ref="http://syriaca.org/person/1116"
                                >Addai</persName>to begin feeding the poor again. </desc>
                    </event>
                </listEvent>
                <bibl type="primary">
                    <ptr target="http://syriaca.org/work/800"/>
                    <citedRange unit="p">130</citedRange>
                </bibl>
                <bibl type="primary">
                    <ptr target="http://syriaca.org/bibl/1409"/>
                    <citedRange unit="p">130</citedRange>
                </bibl>
            </ab>
            <ab type="factoid" subtype="event" xml:id="factoid-6" resp="#syoung">
                <idno type="URI">http://syriaca.org/spear/800-6</idno>
                <listEvent>
                    <event
                        ana="http://syriaca.org/keyword/monks http://syriaca.org/keyword/wine http://syriaca.org/keyword/prayer http://syriaca.org/keyword/blessing">
                        <desc> Though <persName ref="http://syriaca.org/person/1116"
                            >Addai</persName>remained reclusive, <persName
                                ref="http://syriaca.org/person/74">John</persName>and one of the
                            brothers discovered where he would be. As the men approached, <persName
                                ref="http://syriaca.org/person/1116">Addai</persName>fled. <persName
                                ref="http://syriaca.org/person/74">John</persName>returned to the
                            monastery to rest. They met <persName
                                ref="http://syriaca.org/person/1116">Addai</persName>the next day.
                            Perceiving that <persName ref="http://syriaca.org/person/1116"
                                >Addai</persName>wanted his privacy, <persName
                                ref="http://syriaca.org/person/74">John</persName>stopped pestering
                            him, but simply asked for a blessing and a prayer. </desc>
                    </event>
                </listEvent>
                <bibl type="primary">
                    <ptr target="http://syriaca.org/work/800"/>
                    <citedRange unit="p">133</citedRange>
                </bibl>
                <bibl type="primary">
                    <ptr target="http://syriaca.org/bibl/1409"/>
                    <citedRange unit="p">133</citedRange>
                </bibl>
            </ab>
            <ab type="factoid" subtype="death" xml:id="factoid-8" resp="#syoung">
                <idno type="URI">http://syriaca.org/spear/800-8</idno>
                <listPerson>
                    <person>
                        <persName ref="http://syriaca.org/person/1116"/>
                        <death notBefore="0481">
                            <date notBefore="0481" calendar="Gregorian">After 481</date>
                            <note type="desc">
                                <persName ref="http://syriaca.org/person/1116">Addai</persName> died sometime after 481.</note>
                        </death>
                    </person>
                </listPerson>
                <bibl type="primary">
                    <ptr target="http://syriaca.org/work/800"/>
                    <citedRange unit="p">134</citedRange>
                </bibl>
                <bibl type="primary">
                    <ptr target="http://syriaca.org/bibl/1409"/>
                    <citedRange unit="p">134</citedRange>
                </bibl>
            </ab>
            <ab type="factoid" subtype="event" xml:id="factoid-9" resp="#dschwartz">
                <idno type="URI">http://syriaca.org/spear/800-9</idno>
                <listEvent>
                    <event ana="http://syriaca.org/keyword/death http://syriaca.org/keyword/asceticism">
                        <desc>
                            <persName ref="http://syriaca.org/person/1116"
                                >Addai</persName>lived as a recluse in the mountains for
                            twenty-five years before dying.
                        </desc>
                    </event>
                </listEvent>
                <bibl type="primary">
                    <ptr target="http://syriaca.org/work/800"/>
                    <citedRange unit="p">134</citedRange>
                </bibl>
                <bibl type="primary">
                    <ptr target="http://syriaca.org/bibl/1409"/>
                    <citedRange unit="p">134</citedRange>
                </bibl>
            </ab>
