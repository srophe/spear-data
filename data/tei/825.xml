                <idno type="URI">http://syriaca.org/spear/825-14</idno>
                <listPerson>
                    <person>
                        <persName ref="http://syriaca.org/person/1769"/>
                        <state type="mental" ana="http://syriaca.org/keyword/charity">
                            <note type="desc"><persName ref="http://syriaca.org/person/1769"
                                    >Hala</persName> was excited to continue charity towards the
                                community. </note>
                        </state>
                    </person>
                </listPerson>
                <bibl type="primary">
                    <ptr target="http://syriaca.org/work/825"/>
