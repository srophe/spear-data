            <ab type="factoid" subtype="occupation" xml:id="factoid-2"
                resp="#tmcneir #rtrupiano #syoung #egibes #jnsaint-laurent">
                <idno type="URI">http://syriaca.org/spear/825-2</idno>
                <listPerson>
                    <person>
                        <persName ref="http://syriaca.org/person/1769"/>
                        <occupation ana="http://syriaca.org/keyword/monks">
                            <note type="desc"><persName ref="http://syriaca.org/person/1769"
                                    >Hala</persName> was a monk in the <placeName
                                    ref="http://syriaca.org/place/1528">monastery of the
                                    Edessans</placeName></note>
                        </occupation>
                    </person>
                </listPerson>
                <bibl type="primary">
                    <ptr target="http://syriaca.org/work/825"/>
                    <citedRange unit="p">390</citedRange>
                </bibl>
                <bibl type="primary">
