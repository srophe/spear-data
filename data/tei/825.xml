                resp="#tmcneir #rtrupiano #syoung #egibes #jnsaint-laurent">
                <idno type="URI">http://syriaca.org/spear/825-13</idno>
                <listEvent>
                    <event ana="http://syriaca.org/keyword/monks http://syriaca.org/keyword/hospitality">
                        <desc>
                            <persName ref="http://syriaca.org/person/1769">Hala</persName> was
                            brought to a community gathered by the 
                            <persName ref="http://syriaca.org/person/779">queen</persName> at her palace
                            called <placeName ref="http://syriaca.org/place/2793">Hormisda</placeName>.</desc>
                    </event>
                </listEvent>
                <bibl type="primary">
                    <ptr target="http://syriaca.org/work/825"/>
                    <citedRange unit="p">398</citedRange>
                </bibl>
                <bibl type="primary">
