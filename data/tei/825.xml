            <ab type="factoid" subtype="event" xml:id="factoid-3" resp="#dschwartz">
                <idno type="URI">http://syriaca.org/spear/825-3</idno>
                <listEvent>
                    <event ana="http://syriaca.org/keyword/humility http://syriaca.org/keyword/asceticism http://syriaca.org/keyword/medicine http://syriaca.org/keyword/illness http://syriaca.org/keyword/poor">
                        <desc>
                            <persName ref="http://syriaca.org/person/1769">Hala</persName> 
                            was a monk who cared for the sick and the needs of the strangers.
                        </desc>
                    </event>
                </listEvent>
                <bibl type="primary">
                    <ptr target="http://syriaca.org/work/825"/>
                    <citedRange unit="p">391-392</citedRange>
                </bibl>
                <bibl type="primary">
                    <ptr target="http://syriaca.org/bibl/2032"/>
                    <citedRange unit="p">593-594</citedRange>
                </bibl>
            </ab>
            <ab type="factoid" subtype="sanctity" xml:id="factoid-16" resp="#dschwartz">
                <idno type="URI">http://syriaca.org/spear/825-16</idno>
                <listPerson>
                    <person>
                        <persName ref="http://syriaca.org/person/1769"/>
                        <state type="sanctity"
                            ana="http://syriaca.org/keyword/saints">
                            <note type="desc">
                                <persName ref="http://syriaca.org/person/1769">Hala</persName> 
                                was a saint. </note>
                        </state>
                    </person>
                </listPerson>
                <bibl type="primary">
                    <ptr target="http://syriaca.org/work/825"/>
                    <citedRange unit="p">391-392</citedRange>
                </bibl>
                <bibl type="primary">
                    <ptr target="http://syriaca.org/bibl/2032"/>
                    <citedRange unit="p">593-594</citedRange>
                </bibl>
            </ab>
            <ab type="factoid" subtype="event" xml:id="factoid-4"
                resp="#tmcneir #rtrupiano #syoung #egibes #jnsaint-laurent">
                <idno type="URI">http://syriaca.org/spear/825-4</idno>
                <listEvent>
                    <event
                        ana="http://syriaca.org/keyword/wine http://syriaca.org/keyword/cooks http://syriaca.org/keyword/food http://syriaca.org/keyword/poor http://syriaca.org/keyword/charity">
                        <desc><persName ref="http://syriaca.org/person/1769">Hala</persName> cleaned
                            latrines, picked lentils from the garden, and cooked from food waste and
                            wine for the poor by the gates. </desc>
                    </event>
                </listEvent>
                <bibl type="primary">
                    <ptr target="http://syriaca.org/work/825"/>
                    <citedRange unit="p">394</citedRange>
                </bibl>
                <bibl type="primary">
                    <ptr target="http://syriaca.org/bibl/2032"/>
                    <citedRange unit="p">596</citedRange>
                </bibl>
            </ab>
            <ab type="factoid" subtype="event" xml:id="factoid-5"
                resp="#tmcneir #rtrupiano #syoung #egibes #jnsaint-laurent">
                <idno type="URI">http://syriaca.org/spear/825-5</idno>
                <listEvent>
                    <event
                        ana="http://syriaca.org/keyword/liturgy http://syriaca.org/keyword/prayer http://syriaca.org/keyword/hours http://syriaca.org/keyword/bible http://syriaca.org/keyword/silence http://syriaca.org/keyword/sleep http://syriaca.org/keyword/discipleship">
                        <desc><persName ref="http://syriaca.org/person/1769">Hala</persName> kept
                            silence except when he prayed the psalms and the liturgy and read
                            scripture without interruption and taught his disciples throughout the
                            night. </desc>
                    </event>
                </listEvent>
                <bibl type="primary">
                    <ptr target="http://syriaca.org/work/825"/>
                    <citedRange unit="p">394</citedRange>
                </bibl>
                <bibl type="primary">
                    <ptr target="http://syriaca.org/bibl/2032"/>
                    <citedRange unit="p">596</citedRange>
                </bibl>
            </ab>
            <ab type="factoid" subtype="event" xml:id="factoid-6"
                resp="#tmcneir #rtrupiano #syoung #egibes #jnsaint-laurent">
                <idno type="URI">http://syriaca.org/spear/825-6</idno>
                <listEvent>
                    <event
                        ana="http://syriaca.org/keyword/poverty http://syriaca.org/keyword/charity http://syriaca.org/keyword/monks http://syriaca.org/keyword/monasticism http://syriaca.org/keyword/clergy">
                        <desc> Monastery authorities were becoming resentful of <persName
                                ref="http://syriaca.org/person/1769">Hala</persName> giving to the
                            poor. </desc>
                    </event>
                </listEvent>
                <bibl type="primary">
                    <ptr target="http://syriaca.org/work/825"/>
                    <citedRange unit="p">395</citedRange>
                </bibl>
                <bibl type="primary">
                    <ptr target="http://syriaca.org/bibl/2032"/>
                    <citedRange unit="p">597</citedRange>
                </bibl>
            </ab>
            <ab type="factoid" subtype="event" xml:id="factoid-7"
                resp="#tmcneir #rtrupiano #syoung #egibes #jnsaint-laurent">
                <idno type="URI">http://syriaca.org/spear/825-7</idno>
                <listEvent>
                    <event ana="http://syriaca.org/keyword/insults">
                        <desc> Monastery authorities heaped indignation and abuse upon <persName
                                ref="http://syriaca.org/person/1769">Hala</persName> and threw his
                            cups and plates to the ground. </desc>
                    </event>
                </listEvent>
                <bibl type="primary">
                    <ptr target="http://syriaca.org/work/825"/>
                    <citedRange unit="p">395</citedRange>
                </bibl>
                <bibl type="primary">
                    <ptr target="http://syriaca.org/bibl/2032"/>
                    <citedRange unit="p">597</citedRange>
                </bibl>
            </ab>
            <ab type="factoid" subtype="event" xml:id="factoid-8"
                resp="#tmcneir #rtrupiano #syoung #egibes #jnsaint-laurent">
                <idno type="URI">http://syriaca.org/spear/825-8</idno>
                <listEvent>
                    <event
                        ana="http://syriaca.org/keyword/dress http://syriaca.org/keyword/water http://syriaca.org/keyword/anointing http://syriaca.org/keyword/monasticism">
                        <desc> When strangers came to the monastery <persName
                                ref="http://syriaca.org/person/1769">Hala</persName> would wash and
                            annoint them. </desc>
                    </event>
                </listEvent>
                <bibl type="primary">
                    <ptr target="http://syriaca.org/work/825"/>
                    <citedRange unit="p">396</citedRange>
                </bibl>
                <bibl type="primary">
