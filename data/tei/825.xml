                    <person>
                        <persName ref="http://syriaca.org/person/1769"> Mar so-and-so the Zealous
                        </persName>
                    </person>
                </listPerson>
                <bibl type="primary">
                    <ptr target="http://syriaca.org/work/825"/>
                    <citedRange unit="p">396</citedRange>
                </bibl>
                <bibl type="primary">
                    <ptr target="http://syriaca.org/bibl/2032"/>
