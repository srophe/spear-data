                <listEvent>
                    <event ana="http://syriaca.org/keyword/letters http://syriaca.org/keyword/bible http://syriaca.org/keyword/exegesis" notBefore="0522" notAfter="0526">
                        <desc>
                            <persName ref="http://syriaca.org/person/2597">Anastasia the deaconess</persName> wrote a letter to
                            <persName ref="http://syriaca.org/person/51">Severus</persName>
                            asking him to clarify various difficult passages in the Bible.
                            <listRelation>
                                <relation type="person" ref="http://syriaca.org/keyword/sender-of-letter-to" active="http://syriaca.org/person/2597" passive="http://syriaca.org/person/51" notBefore="0522" notAfter="0526"/>
                            </listRelation>
                        </desc>
                    </event>
                </listEvent>
                <bibl type="primary">
                    <ptr target="http://syriaca.org/bibl/671"/>
                    <citedRange unit="p">75-103</citedRange>
                    <citedRange unit="part">69</citedRange>
                </bibl>
            </ab>
