                        <desc>
                            <persName ref="http://syriaca.org/person/51">Severus</persName> 
                            cited positively
                            <persName ref="http://syriaca.org/person/544">Ignatius of Antioch</persName>.
                        </desc>
                    </relation>
                </listRelation>
                <bibl type="primary">
                    <ptr target="http://syriaca.org/bibl/671"/>
                    <citedRange unit="p">97-98</citedRange>
                    <citedRange unit="part">69</citedRange>
                </bibl>
            </ab>
            <ab type="factoid" subtype="relation" xml:id="factoid-12" resp="#dschwartz">
                <idno type="URI">https://spear-prosop.org/3125-12</idno>
                <listRelation>
                    <relation type="person" ref="http://syriaca.org/keyword/cited-positively" active="http://syriaca.org/person/51" passive="http://syriaca.org/person/573">
                        <desc>
                            <persName ref="http://syriaca.org/person/51">Severus</persName> 
                            cited positively
                            <persName ref="http://syriaca.org/person/573">John Chrysostom</persName>.
                        </desc>
                    </relation>
                </listRelation>
                <bibl type="primary">
                    <ptr target="http://syriaca.org/bibl/671"/>
                    <citedRange unit="p">99-100</citedRange>
