                </bibl>
            </ab>
            <ab type="factoid" subtype="relation" xml:id="factoid-7" resp="#dschwartz">
                <idno type="URI">https://spear-prosop.org/3125-7</idno>
                <listRelation>
                    <relation type="person" ref="http://syriaca.org/keyword/sibling-of" mutual="http://syriaca.org/person/2597 http://syriaca.org/person/2661">
                        <desc>
                            <persName ref="http://syriaca.org/person/2597">Anastasia</persName> and <persName ref="http://syriaca.org/person/2661">Innocent</persName> 
                            were siblings.
                        </desc>
                    </relation>
                </listRelation>
                <bibl type="primary">
                    <ptr target="http://syriaca.org/bibl/671"/>
                    <citedRange unit="p">101</citedRange>
                    <citedRange unit="part">69</citedRange>
                </bibl>
            </ab>
            <ab type="factoid" subtype="gender" xml:id="factoid-8" resp="#dschwartz">
                <idno type="URI">https://spear-prosop.org/3125-8</idno>
                <listPerson>
                    <person>
                        <persName ref="http://syriaca.org/person/2597"/>
                        <trait type="gender" ana="http://syriaca.org/keyword/female">
                            <note type="desc">
                                <persName ref="http://syriaca.org/person/2597">Anastasia</persName> 
                                was female.
                            </note>
                        </trait>
                    </person>
                </listPerson>
                <bibl type="primary">
                    <ptr target="http://syriaca.org/bibl/671"/>
                    <citedRange unit="p">75</citedRange>
                    <citedRange unit="part">69</citedRange>
                </bibl>
            </ab>
            <ab type="factoid" subtype="relation" xml:id="factoid-9" resp="#dschwartz">
                <idno type="URI">https://spear-prosop.org/3125-9</idno>
                <listRelation>
                    <relation type="person" ref="http://syriaca.org/keyword/friendship-for" mutual="http://syriaca.org/person/51 http://syriaca.org/person/2597">
                        <desc>
                            <persName ref="http://syriaca.org/person/51">Severus</persName> and <persName ref="http://syriaca.org/person/2597">Anastasia</persName> 
                            expressed deep affection for one another in their letters.
                        </desc>
                    </relation>
                </listRelation>
                <bibl type="primary">
                    <ptr target="http://syriaca.org/bibl/671"/>
                    <citedRange unit="p">103</citedRange>
                    <citedRange unit="part">69</citedRange>
                </bibl>
            </ab>
            <ab type="factoid" subtype="event" xml:id="factoid-10" resp="#dschwartz">
                <idno type="URI">https://spear-prosop.org/3125-10</idno>
                <listEvent>
                    <event ana="http://syriaca.org/keyword/body http://syriaca.org/keyword/heresy" notBefore="0522" notAfter="0526">
                        <desc>
                            <persName ref="http://syriaca.org/person/51">Severus</persName> denounced 
                            <persName ref="http://syriaca.org/person/2496">Isaiah</persName> 
                            for telling lies about him, claiming that 
                            <persName ref="http://syriaca.org/person/51">Severus</persName> taught that
                            the body of Christ underwent corruption while he was in the grave.
                            <listRelation>
                                <relation type="person" ref="http://syriaca.org/keyword/enmity-for" active="http://syriaca.org/person/51" passive="http://syriaca.org/person/2496" notBefore="0522" notAfter="0526"/>
                                <relation type="person" ref="http://syriaca.org/keyword/enmity-for" active="http://syriaca.org/person/2496" passive="http://syriaca.org/person/51" notBefore="0522" notAfter="0526"/>
                            </listRelation>
                        </desc>
                    </event>
                </listEvent>
                <bibl type="primary">
                    <ptr target="http://syriaca.org/bibl/671"/>
                    <citedRange unit="p">102</citedRange>
                    <citedRange unit="part">69</citedRange>
                </bibl>
            </ab>
