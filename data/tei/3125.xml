                <idno type="URI">https://spear-prosop.org/3125-5</idno>
                <listRelation>
                    <relation type="person" ref="http://syriaca.org/keyword/cited-positively" active="http://syriaca.org/person/51" passive="http://syriaca.org/person/512">
                        <desc>
                            <persName ref="http://syriaca.org/person/51">Severus</persName> 
                            cited positively
                            <persName ref="http://syriaca.org/person/512">Gregory of Nyssa</persName>.
                        </desc>
                    </relation>
                </listRelation>
                <bibl type="primary">
                    <ptr target="http://syriaca.org/bibl/671"/>
                    <citedRange unit="p">82</citedRange>
                    <citedRange unit="part">69</citedRange>
                </bibl>
            </ab>
