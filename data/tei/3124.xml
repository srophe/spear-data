            <ab type="factoid" subtype="event" xml:id="factoid-1" resp="#dschwartz">
                <idno type="URI">http://syriaca.org/spear/3124-1</idno>
                <listEvent>
                    <event ana="http://syriaca.org/keyword/letters http://syriaca.org/keyword/baptism http://syriaca.org/keyword/anointing http://syriaca.org/keyword/repentance http://syriaca.org/keyword/heresy http://syriaca.org/keyword/conversion http://syriaca.org/keyword/ordination" notBefore="0522" notAfter="0527">
                        <desc>
                            <persName ref="http://syriaca.org/person/51">Severus</persName> wrote a letter to 
                            <persName ref="http://syriaca.org/person/2751">Sergius</persName> and
                            <persName ref="http://syriaca.org/person/2407">Marion</persName>
                            on the subject of converts form Chalcedonianism doing penance but not being 
                            re-baptized or re-anointed and the subject of needing more ordained clergy.
                            <listRelation>
                                <relation type="person" ref="http://syriaca.org/keyword/sender-of-letter-to" active="http://syriaca.org/person/51" passive="http://syriaca.org/person/2751 http://syriaca.org/person/2407"/>
                            </listRelation>
                        </desc>
                    </event>
                </listEvent>
                <bibl type="primary">
                    <ptr target="http://syriaca.org/bibl/669"/>
                    <citedRange unit="p">350-59</citedRange>
                    <citedRange unit="part">V.15</citedRange>
                </bibl>
            </ab>
