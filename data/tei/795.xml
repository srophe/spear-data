        <body>
            <ab type="factoid" subtype="relation" xml:id="factoid-18" resp="#dschwartz">
                <idno type="URI">http://syriaca.org/spear/795-18</idno>
                <listRelation>
                    <relation type="person" ref="http://syriaca.org/keyword/commemorates" active="http://syriaca.org/person/74" passive="http://syriaca.org/person/1320">
                        <desc>
                            <persName ref="http://syriaca.org/person/74">John of Ephesus</persName> 
                            commemorated
                            <persName ref="http://syriaca.org/person/1320">John</persName>.
                        </desc>
                    </relation>
                </listRelation>
                <bibl type="primary"><ptr target="http://syriaca.org/work/795"/><citedRange unit="p">36-55</citedRange></bibl>
                <bibl type="primary"><ptr target="http://syriaca.org/bibl/1409"/><citedRange unit="p">36-55</citedRange></bibl>
            </ab>
            <ab type="factoid" subtype="nameVariant" xml:id="factoid-1" resp="#ktorabi">
                <idno type="URI">http://syriaca.org/spear/795-1</idno>
                <listPerson>
                    <person>
                        <persName ref="http://syriaca.org/person/1320"> John the perfect Nazarite
                        </persName>
                    </person>
                </listPerson>
                <bibl type="primary"><ptr target="http://syriaca.org/work/795"/><citedRange unit="p">36</citedRange></bibl>
                <bibl type="primary"><ptr target="http://syriaca.org/bibl/1409"/><citedRange unit="p">36</citedRange></bibl>
            </ab>
            <ab type="factoid" subtype="gender" xml:id="factoid-2" resp="#ktorabi">
                <idno type="URI">http://syriaca.org/spear/795-2</idno>
                <listPerson>
                    <person>
                        <persName ref="http://syriaca.org/person/1320"/>
                        <trait type="gender" ana="http://syriaca.org/keyword/male">
                            <note type="desc"><persName ref="http://syriaca.org/person/1320">John</persName> was male.</note>
                        </trait>
                    </person>
                </listPerson>
                <bibl type="primary"><ptr target="http://syriaca.org/work/795"/><citedRange unit="p">36</citedRange></bibl>
                <bibl type="primary"><ptr target="http://syriaca.org/bibl/1409"/><citedRange unit="p">36</citedRange></bibl>
            </ab>
            <ab type="factoid" subtype="occupation" xml:id="factoid-3" resp="#ktorabi">
                <idno type="URI">http://syriaca.org/spear/795-3</idno>
                <listPerson>
                    <person>
                        <persName ref="http://syriaca.org/person/1320"/>
                        <occupation ana="http://syriaca.org/keyword/monks"><note type="desc"><persName ref="http://syriaca.org/person/1320">John</persName> was a monk.</note></occupation>
                    </person>
                </listPerson>
                <bibl type="primary"><ptr target="http://syriaca.org/work/795"/><citedRange unit="p">36</citedRange></bibl>
                <bibl type="primary"><ptr target="http://syriaca.org/bibl/1409"/><citedRange unit="p">36</citedRange></bibl>
            </ab>
            <ab type="factoid" subtype="sanctity" xml:id="factoid-4" resp="#ktorabi">
                <idno type="URI">http://syriaca.org/spear/795-4</idno>
                <listPerson>
                    <person>
                        <persName ref="http://syriaca.org/person/1320"/>
                        <state type="sanctity" ana="http://syriaca.org/keyword/saints">
                            <note type="desc"><persName ref="http://syriaca.org/person/1320">John</persName> was a saint.</note>
                        </state>
                    </person>
                </listPerson>
                <bibl type="primary"><ptr target="http://syriaca.org/work/795"/><citedRange unit="p">36</citedRange></bibl>
                <bibl type="primary"><ptr target="http://syriaca.org/bibl/1409"/><citedRange unit="p">36</citedRange></bibl>
            </ab>
            <ab type="factoid" subtype="residence" xml:id="factoid-5" resp="#ktorabi">
                <idno type="URI">http://syriaca.org/spear/795-5</idno>
                <listPerson>
                    <personGrp>
                        <persName ref="http://syriaca.org/person/1320"/>
                        <residence><placeName ref="http://syriaca.org/place/358"/><note type="desc"><persName ref="http://syriaca.org/person/1320">John</persName> was a monk in the <placeName ref="http://syriaca.org/place/358">monastery of
                                    Zuknin</placeName>. </note></residence>
                    </personGrp>
                </listPerson>
                <bibl type="primary"><ptr target="http://syriaca.org/work/795"/><citedRange unit="p">36</citedRange></bibl>
                <bibl type="primary"><ptr target="http://syriaca.org/bibl/1409"/><citedRange unit="p">36</citedRange></bibl>
            </ab>
            <ab type="factoid" subtype="event" xml:id="factoid-6" resp="#ktorabi">
                <idno type="URI">http://syriaca.org/spear/795-6</idno>
                <listEvent>
                    <event ana="http://syriaca.org/keyword/education http://syriaca.org/keyword/monasteries">
                        <desc><persName ref="http://syriaca.org/person/1320">John</persName>
                            received religious training as a boy at the <placeName ref="http://syriaca.org/place/358">monastery of Zuknin</placeName>.
                        </desc>
                    </event>
                </listEvent>
                <bibl type="primary"><ptr target="http://syriaca.org/work/795"/><citedRange unit="p">37</citedRange></bibl>
                <bibl type="primary"><ptr target="http://syriaca.org/bibl/1409"/><citedRange unit="p">37</citedRange></bibl>
            </ab>
            <ab type="factoid" subtype="event" xml:id="factoid-7" resp="#ktorabi">
                <idno type="URI">http://syriaca.org/spear/795-7</idno>
                <listEvent>
                    <event ana="http://syriaca.org/keyword/asceticism">
                        <desc><persName ref="http://syriaca.org/person/1320">John</persName> decided
                            that he would commit himself to an aescetic lifestyle by eating only
                            lentils, salt, water, and bread, despite the misgivings of those around
                            him. </desc>
                    </event>
                </listEvent>
                <bibl type="primary"><ptr target="http://syriaca.org/work/795"/><citedRange unit="p">40</citedRange></bibl>
                <bibl type="primary"><ptr target="http://syriaca.org/bibl/1409"/><citedRange unit="p">40</citedRange></bibl>
            </ab>
            <ab type="factoid" subtype="event" xml:id="factoid-8" resp="#ktorabi">
                <idno type="URI">http://syriaca.org/spear/795-8</idno>
                <listEvent>
                    <event ana="http://syriaca.org/keyword/asceticism http://syriaca.org/keyword/prayer http://syriaca.org/keyword/fasting http://syriaca.org/keyword/anchorites">
                        <desc> A place was made for <persName ref="http://syriaca.org/person/1320">John</persName> in a monastery enclosure, which he dwelt in night
                            and day so that he could pray, weep, and live an ascetic life. </desc>
                    </event>
                </listEvent>
                <bibl type="primary"><ptr target="http://syriaca.org/work/795"/><citedRange unit="p">40</citedRange></bibl>
                <bibl type="primary"><ptr target="http://syriaca.org/bibl/1409"/><citedRange unit="p">40</citedRange></bibl>
            </ab>
            <ab type="factoid" subtype="event" xml:id="factoid-9" resp="#ktorabi">
                <idno type="URI">http://syriaca.org/spear/795-9</idno>
                <listEvent>
                    <event ana="http://syriaca.org/keyword/demons">
                        <desc><persName ref="http://syriaca.org/person/1320">John</persName> had
                            contests with demons. </desc>
                    </event>
                </listEvent>
                <bibl type="primary"><ptr target="http://syriaca.org/work/795"/><citedRange unit="p">40</citedRange></bibl>
                <bibl type="primary"><ptr target="http://syriaca.org/bibl/1409"/><citedRange unit="p">40</citedRange></bibl>
            </ab>
            <ab type="factoid" subtype="event" xml:id="factoid-10" resp="#ktorabi">
                <idno type="URI">http://syriaca.org/spear/795-10</idno>
                <listEvent>
                    <event ana="http://syriaca.org/keyword/asceticism http://syriaca.org/keyword/demons http://syriaca.org/keyword/spiritual-or-ascetic-disciplines">
                        <desc> After ten years of prayer and contending with demons, <persName ref="http://syriaca.org/person/1320">John</persName> was granted
                            divine authority over his enemies and sprititual clarity, so that his
                            understanding of Scripture equalled or surpassed most scholastics.
                        </desc>
                    </event>
                </listEvent>
                <bibl type="primary"><ptr target="http://syriaca.org/work/795"/><citedRange unit="p">41</citedRange></bibl>
                <bibl type="primary"><ptr target="http://syriaca.org/bibl/1409"/><citedRange unit="p">41</citedRange></bibl>
            </ab>
            <ab type="factoid" subtype="nameVariant" xml:id="factoid-11" resp="#ktorabi">
                <idno type="URI">http://syriaca.org/spear/795-11</idno>
                <listPerson>
                    <personGrp>
                        <persName ref="http://syriaca.org/person/3678"> The scholastics and other
                            men who were learned in the Holy Scriptures who came to be instructed by
                                <persName ref="http://syriaca.org/person/1320"/> John </persName>
                    </personGrp>
                </listPerson>
                <bibl type="primary"><ptr target="http://syriaca.org/work/795"/><citedRange unit="p">41</citedRange></bibl>
                <bibl type="primary"><ptr target="http://syriaca.org/bibl/1409"/><citedRange unit="p">41</citedRange></bibl>
            </ab>
            <ab type="factoid" subtype="event" xml:id="factoid-12" resp="#ktorabi">
                <idno type="URI">http://syriaca.org/spear/795-12</idno>
                <listEvent>
                    <event ana="http://syriaca.org/keyword/persecution http://syriaca.org/keyword/heresy http://syriaca.org/keyword/monasteries">
                        <desc><persName ref="http://syriaca.org/person/1320">John</persName>
                            completed twenty-five years in the monastery before the monks were
                            assailed by heresy. </desc>
                    </event>
                </listEvent>
                <bibl type="primary"><ptr target="http://syriaca.org/work/795"/><citedRange unit="p">42</citedRange></bibl>
                <bibl type="primary"><ptr target="http://syriaca.org/bibl/1409"/><citedRange unit="p">42</citedRange></bibl>
            </ab>
            <ab type="factoid" subtype="event" xml:id="factoid-13" resp="#ktorabi">
                <idno type="URI">http://syriaca.org/spear/795-13</idno>
                <listEvent>
                    <event ana="http://syriaca.org/keyword/exile http://syriaca.org/keyword/persecution http://syriaca.org/keyword/monasteries">
                        <desc><persName ref="http://syriaca.org/person/1320">John</persName> went
                            into exile with thirty loyal monks </desc>
                    </event>
                </listEvent>
                <bibl type="primary"><ptr target="http://syriaca.org/work/795"/><citedRange unit="p">42</citedRange></bibl>
                <bibl type="primary"><ptr target="http://syriaca.org/bibl/1409"/><citedRange unit="p">42</citedRange></bibl>
            </ab>
            <ab type="factoid" subtype="nameVariant" xml:id="factoid-14" resp="#ktorabi">
                <idno type="URI">http://syriaca.org/spear/795-14</idno>
                <listPerson>
                    <personGrp>
                        <persName ref="http://syriaca.org/person/3679"> Thirty men and the chiefs of
                            the brotherhood and the leading men of the convent who went into exile
                            with <persName ref="http://syriaca.org/person/1320"/> John </persName>
                    </personGrp>
                </listPerson>
                <bibl type="primary"><ptr target="http://syriaca.org/work/795"/><citedRange unit="p">42</citedRange></bibl>
                <bibl type="primary"><ptr target="http://syriaca.org/bibl/1409"/><citedRange unit="p">42</citedRange></bibl>
            </ab>
            <ab type="factoid" subtype="relation" xml:id="factoid-15" resp="#ktorabi">
                <idno type="URI">http://syriaca.org/spear/795-15</idno>
                <listRelation>
                    <relation type="person" ref="http://syriaca.org/keyword/fellow-clergy" mutual="http://syriaca.org/person/1320 http://syriaca.org/person/3679"><desc><persName ref="http://syriaca.org/person/1320">John the Nazarite</persName> and <persName ref="http://syriaca.org/person/3679">Anonymous 3679</persName> were fellow clergy.</desc></relation>
                </listRelation>
                <bibl type="primary"><ptr target="http://syriaca.org/work/795"/><citedRange unit="p">42</citedRange></bibl>
                <bibl type="primary"><ptr target="http://syriaca.org/bibl/1409"/><citedRange unit="p">42</citedRange></bibl>
            </ab>
            <ab type="factoid" subtype="event" xml:id="factoid-16" resp="#ktorabi">
                <idno type="URI">http://syriaca.org/spear/795-16</idno>
                <listEvent>
                    <event ana="http://syriaca.org/keyword/miracles http://syriaca.org/keyword/demons http://syriaca.org/keyword/healing">
                        <desc> Wherever <persName ref="http://syriaca.org/person/1320">John</persName> went, he healed the sick and exorcised demons.
                        </desc>
                    </event>
                </listEvent>
                <bibl type="primary"><ptr target="http://syriaca.org/work/795"/><citedRange unit="p">42-43</citedRange></bibl>
                <bibl type="primary"><ptr target="http://syriaca.org/bibl/1409"/><citedRange unit="p">42-43</citedRange></bibl>
            </ab>
            <ab type="factoid" subtype="nameVariant" xml:id="factoid-17" resp="#ktorabi">
                <idno type="URI">http://syriaca.org/spear/795-17</idno>
                <listPerson>
                    <personGrp>
                        <persName ref="http://syriaca.org/person/3680"> Demoniacs who were exorcised
                            by <persName ref="http://syriaca.org/person/1320"/> John </persName>
                    </personGrp>
                </listPerson>
                <bibl type="primary"><ptr target="http://syriaca.org/work/795"/><citedRange unit="p">42-43</citedRange></bibl>
                <bibl type="primary"><ptr target="http://syriaca.org/bibl/1409"/><citedRange unit="p">42-43</citedRange></bibl>
            </ab>
